#!/bin/bash
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"
if [ ! -d "$SCRIPT_DIR/claude-control-browser/node_modules" ] || [ ! -f "$SCRIPT_DIR/claude-control-browser/node_modules/electron/index.js" ]; then
    echo "ðŸ“¦ Auto-bootstrapping..."
    ./bootstrap.sh > /tmp/claw-bootstrap.log 2>&1 || exit 1
fi
export CLAW_PROFILES=3
echo "ðŸš€ Launching profile 3..."
LOG_FILE="/tmp/claw-$(date +%s).log"
nohup ./start.sh > "$LOG_FILE" 2>&1 &
PID=$!
echo "âœ… Started (PID: $PID) | Logs: $LOG_FILE"
